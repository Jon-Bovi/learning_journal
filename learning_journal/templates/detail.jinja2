{% extends "layout.jinja2" %}
{% block title %}
Entry: {{ title }}
{% endblock %}
{% block body %}
<div class="entries container">
    <div class="row">
        <article>
            <h4>{{ title }}</h4>
            <h6 class="date">{{ creation_date }}</h6>
            {% if edit_date %}
                <h6 class="date edited">(<em>edited: </em>{{ edit_date }})</h6>
            {% endif %}
            <p>{{ body }}</p>
            <a href="{{ request.route_url('update', id=id) }}">edit</a>
        </article>
    </div>
</div>
{% endblock %}